<Window x:Class="YukerSimV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YukerSimV2"
        mc:Ignorable="d"
        Title="Yuker Sim V2" Height="450" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF3A3A3A">
        <Button x:Name="pet" HorizontalAlignment="Center" Height="204" VerticalAlignment="Center" Width="182" Background="Black" Opacity="0" Panel.ZIndex="1" Click="YukerClick"/>
        <Image x:Name="yukerImg" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/Assets/yuker.png" Height="201" Width="182"/>
        <Label x:Name="clickAmount" Height="60" Margin="0,27,0,0" Content="Clicks: 0" VerticalAlignment="Top" Width="376" Foreground="White" FontSize="32" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Grid x:Name="sfxs" HorizontalAlignment="Left" Height="130" Margin="59,87,0,0" VerticalAlignment="Top" Width="103" Opacity="0"/>
    </Grid>
</Window>
